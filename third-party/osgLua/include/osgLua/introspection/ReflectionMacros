#pragma once
#ifndef OSGLUA_INTROSPECTION_ReflectionMacros
#define OSGLUA_INTROSPECTION_ReflectionMacros
#include <osgLua/Config>

#ifdef OSGLUA_USE_CPPINTROSPECTION
#	include <cppintrospection/ReflectionMacros>
namespace osgLua {
	namespace introspection {
		using namespace cppintrospection;
	} // end of namespace introspection
} // end of namespace osgLua

#else
#	include <osgIntrospection/ReflectionMacros>
namespace osgLua {
	namespace introspection {
		using namespace osgIntrospection;
	} // end of namespace introspection
} // end of namespace osgLua
#endif // which introspection namespace/headers

#endif // OSGLUA_INTROSPECTION_ReflectionMacros
